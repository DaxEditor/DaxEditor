<Window x:Class="DaxEditor.ExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ooops.  Something bad happened" Height="288" Width="639">
    <Grid>
        <TextBlock Margin="5,5,0,0"> Please send this error log to <Hyperlink NavigateUri="mailto:daxeditor@outlook.com">daxeditor@outlook.com</Hyperlink> for further investigation.</TextBlock>
        <TextBox IsReadOnly="True" Margin="0,25,0,42" Name="_exceptionLog"></TextBox>
        <Button Margin="191,0,205,12" IsDefault="True" Height="24" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="100" Click="OK_Click">OK</Button>
    </Grid>
</Window>
