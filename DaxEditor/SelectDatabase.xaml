<Window x:Class="DaxEditor.SelectDatabase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select database on server " Height="300" Width="300"
        ResizeMode="NoResize" ShowInTaskbar="False" >

    <Grid>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" Name="_discoveringLabel">Discovering databases...</Label>
        <ListBox Name ="_databasesListBox" Visibility="Hidden" Margin="0,0,0,50"></ListBox>
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Margin="50,227,0,0" Name="_buttonOK" VerticalAlignment="Top" Width="75" Click="OK_Click" IsDefault="True" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,227,50,0" Name="_buttonCancel" VerticalAlignment="Top" Width="75" Click="Cancel_Click" IsCancel="True" />
    </Grid>
</Window>
